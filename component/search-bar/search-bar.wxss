/* component/search-bar/search-bar.wxss */
@import '../../common.wxss';

.m-search-bar {
  height: 88rpx;
  border-bottom: 1px solid #e5e5e5;
  padding: 14rpx 0 14rpx 20rpx;
}

.m-search-bar .input {
  background-color: #f5f5f5;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #999;
  line-height: 60rpx;
}

.m-search-bar input {
  height: 60rpx;
}

.m-search-bar .icon-search {
  margin: 0 10rpx 0 20rpx;
}

.m-search-bar .search-btn {
  font-size: 28rpx;
  width: 88rpx;
  text-align: center;
  line-height: 60rpx;
}