/* pages/other/register/register.wxss */

page {
  background-color: #f5f5f5;
}

form {
  display: block;
  margin: 0 32rpx;
}

.user-type {
  margin: 32rpx 32rpx 20rpx;
  padding: 20rpx 20rpx 16rpx;
  background-color: #fff;
}

.user-type > text {
  font-size: 28rpx;
  line-height: 40rpx;
}

.types > view {
  margin: 10rpx 0;
  flex-basis: 31.6%;
  height: 64rpx;
  line-height: 60rpx;
  border: 2rpx solid #d4d1cf;
  text-align: center;
}

.types > view.active {
  border-color: #fb7422;
  color: #fb7422;
}

.m-input {
  position: relative;
  border: 2rpx solid #e5e5e5;
  background-color: #fff;
}

.m-input.line {
  border-top: none;
}

.input-placeholder {
  font-size: 24rpx;
}

.m-input .label {
  position: absolute;
  left: 0;
  top: 0;
  width: 104rpx;
  padding-top: 16rpx;
  line-height: 48rpx;
  text-indent: 20rpx;
}

.m-input input {
  margin-left: 104rpx;
  height: 80rpx;
  min-height: 80rpx;
  line-height: 48rpx;
  padding: 16rpx 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  outline: none;
}

.m-input2 input {
  margin-right: 230rpx;
}

.code-button {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 2;
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}

.m-submit {
  margin-top: 40rpx;
}

.agreement {
  margin: 16rpx 32rpx 0;
}

.agreement > text {
  color: #999;
}

.agreement > navigator {
  color: #fb7422;
  display: inline;
}
