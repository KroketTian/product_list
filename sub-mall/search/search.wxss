/* pages/mall/search/search.wxss */
page {
  height: 100%;
  background-color: #fff;
}

.p-search {
  height: 100%;
}

.p-search .title {
  padding: 25rpx;
  display: block;
  font-size: 28rpx;
}

.p-search .list {
  padding: 0 20rpx 20rpx 20rpx;
  font-size: 28rpx;
}

.p-search .item {
  display: inline-block;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 15rpx 0;
  word-break: break-all;
  color: #666;
}