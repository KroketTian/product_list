/* pages/product-detail/product-detail.wxss */
.product-detail-view{
    flex-direction:column;
}
.product-banner{
    width:100vw;
    height: 20vw;
    text-align: center;
    display:table-cell;
    vertical-align: middle;
    background: #fff;
}
.product-banner image{
    max-height:100%;
    max-width:100%;
    display:block;
    margin:auto;
}
.top-bar{
    background:#fff;
    position:fixed;
    top:0;
    width:100%;
    padding:0 20rpx;
    box-shadow:0 0 5px #888;
    height:60rpx;
    line-height:60rpx;
    z-index: 100;
}
.top-bar i{
    width:60rpx;
    display:inline-block;
}
.intop-bar{
    background: transparent;
    box-shadow: 0 0 0 0;
}
.intop-bar i{
    background:#ccc;
    border-radius:50%;
    color:#fff;
}
.content-block{
    background:#fff;
    display:block;
    padding:24rpx;
    margin-bottom:20rpx;
}
.new-prize{
    color:red;
    display:block;
    font-size:38rpx;
}
.old-prize{
    display:block;
    font-size:24rpx;
    color:#999;
    position: relative;
}
.old-prize-num{
    position: relative;
}
.old-prize-num:after{
    content:'';
    display:block;
    width:100%;
    border-top:1px solid;
    position: absolute;
    top: 50%;
    left: 0%;
}
.title-block h5{
    font-weight:500;
    font-size:34rpx;
    margin-top:16rpx;
    display:block;
}
.detail-label{
    color:#999;
    width:74rpx;
    display:inline-flex;
}
.promise li{
    width:116rpx;
    display:inline-flex;   
    position: relative; 
}
.promise li:after{
    content:'.';
    display: block;
    position: absolute;
    font-weight: 900;
    top: -20%;
    right:6rpx;
}
.product-detail{
    margin-top:100rpx;
    position:relative;
}
.product-detail image{
    display: block;
}
.content-block-title{
    position:absolute;
    top:-60rpx;
    left:50%;
    margin-left:-57rpx;
    color:#777;

}
.content-block-title:before{
    content:'';
    position: absolute;
    border-top: 1px solid #ddd;
    width:100rpx;
    left: 130rpx;
    top: 50%;
}
.content-block-title:after{
    content:'';
    position: absolute;
    border-top: 1px solid #ddd;
    width:100rpx;
    left: -140rpx;
    top: 50%;
}